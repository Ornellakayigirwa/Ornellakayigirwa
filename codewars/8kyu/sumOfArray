function sum(numbers) {
  
   // Check if 'numbers' is an array and not empty
  if (!Array.isArray(numbers) || numbers.length === 0) {
    return 0;
  }

  //Adding all element in the array 
  return numbers.reduce(function(total, num) {
    
    // Add each number to the running total
    return total + num;
    
  }, 0); // Start with 0 as the initial value

}